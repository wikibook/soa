<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
  http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>soabook</groupId>
    <artifactId>soabook</artifactId>
    <version>1.0</version>
  </parent>
  <groupId>soaj</groupId>
  <artifactId>adaptive-config</artifactId>
  <packaging>jar</packaging>
  <version>1.0</version>
  <name>adaptive-config</name>
  <dependencies>
    <dependency>
      <groupId>glassfish</groupId>
      <artifactId>javaee</artifactId>
      <version>system</version>
      <scope>system</scope>
      <systemPath>${glassfish.home}/lib/javaee.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>glassfish</groupId>
      <artifactId>webservices-tools</artifactId>
      <version>system</version>
      <scope>system</scope>
      <systemPath>${glassfish.home}/lib/webservices-tools.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>glassfish</groupId>
      <artifactId>webservices-rt</artifactId>
      <version>system</version>
      <scope>system</scope>
      <systemPath>${glassfish.home}/lib/webservices-rt.jar</systemPath>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>target/generated/src/main/java</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <configuration>
              <tasks>
                <ant antfile="${basedir}/build.xml" inheritRefs="true">
                  <target name="compileschema"/>
                </ant>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
