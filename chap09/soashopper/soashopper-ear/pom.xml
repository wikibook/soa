<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
  http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>soabook</groupId>
  <artifactId>soashopper-ear</artifactId>
  <packaging>ear</packaging>
  <version>1.0</version>
  <name>SOASHOPPER-EAR</name>
  <parent>
    <groupId>soabook</groupId>
    <artifactId>soabook</artifactId>
    <version>1.0</version>
  </parent>
  <dependencies>
    <dependency>
      <groupId>soabook</groupId>
      <artifactId>soashopper-services-rest</artifactId>
      <type>war</type>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>soabook</groupId>
      <artifactId>soashopper-services-soap</artifactId>
      <type>war</type>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>soabook</groupId>
      <artifactId>soashopper-ajax</artifactId>
      <type>war</type>
      <version>1.0</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
           <modules>
             <webModule>
               <groupId>soabook</groupId>
               <artifactId>soashopper-services-rest</artifactId>
               <contextRoot>soashopper/rest</contextRoot>
             </webModule>
             <webModule>
               <groupId>soabook</groupId>
               <artifactId>soashopper-services-soap</artifactId>
               <contextRoot>soashopper/soap</contextRoot>
             </webModule>
             <webModule>
               <groupId>soabook</groupId>
               <artifactId>soashopper-ajax</artifactId>
               <contextRoot>soashopper/ajax</contextRoot>
             </webModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
