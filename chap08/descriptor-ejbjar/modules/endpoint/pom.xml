<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
  http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>soabook</groupId>
  <artifactId>chap08-descriptor-ejbjar-endpoint</artifactId>
  <packaging>jar</packaging>
  <version>1.0</version>
  <name>CHAP08-DESCRIPTOR-EJBJAR-ENDPOINT</name>
  <parent>
    <groupId>soabook</groupId>
    <artifactId>soabook</artifactId>
    <version>1.0</version>
  </parent>
  <dependencies>
    <dependency>
      <groupId>soabook</groupId>
      <artifactId>chap08-descriptor-ejbjar-mywebservice-wsdl2java</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>glassfish</groupId>
      <artifactId>javaee</artifactId>
      <version>systempath</version>
      <scope>system</scope>
      <systemPath>${glassfish.home}/lib/javaee.jar</systemPath>
    </dependency> 
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>target/work/java</sourceDirectory>
    <resources>
      <resource>
        <directory>target/work/java</directory>
        <includes>
          <include>META-INF/**</include>
          <exclude>**/.svn/**</exclude>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>customize-ejbjar</id>
            <phase>process-sources</phase>
            <configuration>
              <tasks>
                <ant target="filter-sources"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>webref-import</id>
            <phase>process-classes</phase>
            <configuration>
              <tasks>
                <ant target="webref-import"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
